<div>
<h3> Novo Restaurante </h3>

<% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@restaurant.errors.count, "erro") %> proibiu este restaurante de ser salvo:</h2>
    <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= render 'form', restaurant: @restaurant %>  
</div>
