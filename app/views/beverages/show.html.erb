<section> 
  <div>
      <h3>Bebida: <%= @beverage.name  %></h3>
      <dl>
        <dt> 
          <% if @beverage.image.attached? %>
            <img src="<%= url_for(@beverage.image) %>" alt="Imagem">
          <% end %>
        </dt>
        <dt>Descrição:</dt>
        <dd><%= @beverage.description %></dd>
        <dt>Calorias:</dt>
        <dd><%= @beverage.calories %> kcal</dd>
        <dt>Status:</dt>
        <dd><%= I18n.translate(@beverage.status) %></dd>
  </div>
  <% if @beverage.active? %>
    <%= button_to 'Desativar', inactive_beverage_path(@beverage) %>
  <% else %>
    <%= button_to 'Ativar', active_beverage_path(@beverage) %>
  <% end %>
  <%= link_to 'Adicionar porção', new_beverage_beverage_portion_path(@beverage) %>
  <%= link_to 'Editar', edit_beverage_path(@beverage)%>
  <%= button_to 'Remover', beverage_path(@beverage), method: :delete %>
</section>

<section>
  <% @beverage.beverage_portions.each do |beverage_portion| %>
    <%= link_to beverage_portion.description, beverage_beverage_portion_path(@beverage, beverage_portion) %> preço: <%= beverage_portion.price %>
  <% end %>
</section>