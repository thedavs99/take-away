<section class="bg-slate-500">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
    <h2 class="mb-2 text-xl font-semibold leading-none text-gray-900 md:text-2xl dark:text-white">Bebida: <%= @beverage.name  %> </h2>
    <p class="mb-4 text-xl font-extrabold leading-none text-gray-900 md:text-2xl dark:text-blue">         
      <% if @beverage.image.attached? %>
        <img src="<%= url_for(@beverage.image) %>" alt="Imagem" class="object-contain h-48 w-96">
      <% end %>
    </p>    
    <dl>
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Descrição:</dt>
      <dd class="mb-4 font-light text-black-500 sm:mb-5 dark:text-black-400"><%= @beverage.description %></dd>
      <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Calorias:</dt>
      <dd class="mb-4 font-light text-black-500 sm:mb-5 dark:text-black-400"><%= @beverage.calories %> kcal</dd>
    </dl>
    <dl class="flex items-center space-x-6">
      <div>
        <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Status:</dt>
        <dd class="mb-4 font-light text-black-500 sm:mb-5 dark:text-black-400"><%= I18n.translate(@beverage.status) %></dd>
      </div>
    </dl>
      <div>
   <% @beverage.beverage_portions.each do |beverage_portion| %>
    <%= link_to beverage_portion.description, beverage_beverage_portion_path(@beverage, beverage_portion) %> preço: <%= beverage_portion.price %>
  <% end %>
      </div>
      <br/>
      <div class="flex items-center space-x-4">
        <% if @beverage.active? %>
          <%= button_to 'Desativar', inactive_beverage_path(@beverage), class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
        <% else %>
          <%= button_to 'Ativar', active_beverage_path(@beverage), class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
        <% end %>
        <%= link_to 'Editar', edit_beverage_path(@beverage), class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
        <%= button_to 'Remover', beverage_path(@beverage), method: :delete,  class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
        <%= link_to 'Adicionar porção', new_beverage_beverage_portion_path(@beverage), class: "inline-flex items-center text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-900" %>
      </div>
    <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
  </div>
</section>

