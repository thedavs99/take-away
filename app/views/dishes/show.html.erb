<section> 
  <div>
      <h3>Prato: <%= @dish.name  %></h3>
      <dl>
        <dt> 
          <% if @dish.image.attached? %>
            <img src="<%= url_for(@dish.image) %>" alt="Imagem">
          <% end %>
        </dt>
        <dt>Descrição:</dt>
        <dd><%= @dish.description %></dd>
        <dt>Calorias:</dt>
        <dd><%= @dish.calories %> kcal</dd>
        <dt>Status:</dt>
        <dd><%= I18n.translate(@dish.status) %></dd>
        <dt>Caracteristicas:</dt>
        <% @dish.tags.each do |tag| %>
          <dd><%= tag.description %></dd>
        <% end %>
  </div>
  <% if @dish.active? %>
    <%= button_to 'Desativar', inactive_dish_path(@dish) %>
  <% else %>
    <%= button_to 'Ativar', active_dish_path(@dish) %>
  <% end %>
  <%= link_to 'Adicionar porção', new_dish_dish_portion_path(@dish) %>
  <%= link_to 'Editar', edit_dish_path(@dish)%>
  <%= button_to 'Remover', dish_path(@dish), method: :delete %>
</section>

<section>
  <% @dish.dish_portions.each do |dish_portion| %>
    <%=link_to dish_portion.description, dish_dish_portion_path(@dish, dish_portion) %> preço: <%= dish_portion.price %>
  <% end %>
</section>